@model Doctorissimo.ViewModels.CreateAppointmentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Appointment.AppointmentTime" class="control-label"></label>
                <input asp-for="@Model.Appointment.AppointmentTime" asp-format="{0:yyyy-mm-ddTHH:mm}" class="form-control"/>
                <span asp-validation-for="@Model.Appointment.AppointmentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRoomId" class="control-label">Room</label>
                <select asp-for="SelectedRoomId"
                        asp-items="@(new SelectList(Model.Rooms, "Id", "Name"))" class="form-control">
                    @if (Model.SelectedRoomId ==0)
                    {
                         <option>Please select a room</option>
                    }
                    else
                    {
                        <option>@Model.SelectedRoomId</option>
                    }
                </select>
                <span asp-validation-for="@Model.SelectedRoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.SelectedDoctorId" class="control-label">Doctor</label>
                <select asp-for="@Model.SelectedDoctorId"
                        asp-items="@(new SelectList(Model.Doctors, "Id", "FullName"))" class="form-control">
                    <option>Please select a doctor</option>
                </select>
                <span asp-validation-for="@Model.SelectedDoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
