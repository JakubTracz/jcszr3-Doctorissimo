@using DAL.Enums
@model Doctorissimo.ViewModels.BookAppointmentViewModel

@{
    ViewData["Title"] = "Book Appointment";
}

<h1>Book Appointment</h1>
@if (ViewBag.AppointmentStatus == AppointmentStatus.Booked)
{
    <h4>Selected appointment is already booked. Please select a different one.</h4>
}
<hr />
<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.AppointmentStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Appointment.AppointmentStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.AppointmentTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Appointment.AppointmentTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.RoomDto.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Appointment.RoomDto.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.DoctorDto.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Appointment.DoctorDto.FullName)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            <input type="hidden" asp-for="Appointment.AppointmentStatus" />
            <input type="hidden" asp-for="Appointment.AppointmentTime" />
            <span asp-validation-for="Appointment.AppointmentTime" class="text-danger"></span>
            <input type="hidden" asp-for="Appointment.DoctorId" />
            <input type="hidden" asp-for="Appointment.RoomId" />
            <div class="form-group">
                <label asp-for="SelectedPatientId" class="control-label"></label>
                <select asp-for="SelectedPatientId"
                        asp-items="@(new SelectList(Model.Patients, "Id", "FullName"))" class="form-control">
                    <option>Please select a patient</option>
                </select>
                <span asp-validation-for="Patients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
