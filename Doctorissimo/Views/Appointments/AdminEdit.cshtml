@using DAL.Enums
@model DAL.Models.ViewModels.AdminEditAppointmentViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Appointment.Id" />
            <div class="form-group">
                <label asp-for="Appointment.AppointmentTime" class="control-label"></label>
                <input asp-for="Appointment.AppointmentTime" class="form-control" />
                <span asp-validation-for="Appointment.AppointmentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.RoomId" class="control-label">Room</label>
                <select asp-for="Appointment.RoomId"
                        asp-items="@(new SelectList(Model.Rooms, "Id", "Name",Model.Room.Name))" class="form-control">
                </select>
                <span asp-validation-for="SelectedRoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.DoctorId" class="control-label">Doctor</label>
                <select asp-for="Appointment.DoctorId"
                        asp-items="@(new SelectList(Model.Doctors, "Id", "FullName",Model.Doctor.FullName))" class="form-control">
                    <option>@Model.Doctor.FullName</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.PatientId" class="control-label">Doctor</label>
                <select asp-for="Appointment.PatientId"
                        asp-items="@(new SelectList(Model.Patients, "Id", "FullName",Model.Patient.FullName))" class="form-control">
                    <option>@Model.Patient.FullName</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.AppointmentStatus" class="control-label"></label>
                <select asp-for="@Model.Appointment.AppointmentStatus" asp-items="Html.GetEnumSelectList<AppointmentStatus>()" class="form-control"></select>
                <span asp-validation-for="Appointment.AppointmentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
