@using DAL.Enums
@model DAL.Models.Doctor

@{
    ViewData["Title"] = "Index";
}

<h1>Search doctors by specialty</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PatientSearchDoctorsResult">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Specialty" class="control-label"></label>
                <select asp-for="@Model.Specialty" asp-items="Html.GetEnumSelectList<DoctorSpecialty>()" class="form-control"></select>
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
